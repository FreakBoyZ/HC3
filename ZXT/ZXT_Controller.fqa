{"name":"ZXT Controller","type":"com.fibaro.deviceController","apiVersion":"1.2","initialProperties":{"viewLayout":{"$jason":{"body":{"header":{"style":{"height":"0"},"title":"quickApp_device_316"},"sections":{"items":[{"components":[{"name":"lblText1","style":{"weight":"1.2"},"text":"A/C Controller","type":"label"},{"style":{"weight":"0.5"},"type":"space"}],"style":{"weight":"1.2"},"type":"vertical"},{"components":[{"name":"lblStatus","style":{"weight":"1.2"},"text":"Status","type":"label"},{"style":{"weight":"0.5"},"type":"space"}],"style":{"weight":"1.2"},"type":"vertical"},{"components":[{"components":[{"name":"btnModeOff","style":{"weight":"0.33"},"text":"Off","type":"button"},{"name":"btnModeCool","style":{"weight":"0.33"},"text":"Cool","type":"button"},{"name":"btnModeAuto","style":{"weight":"0.33"},"text":"Auto","type":"button"}],"style":{"weight":"1.2"},"type":"horizontal"},{"style":{"weight":"0.5"},"type":"space"}],"style":{"weight":"1.2"},"type":"vertical"},{"components":[{"components":[{"name":"btnDecreaseTemp","style":{"weight":"0.50"},"text":"-","type":"button"},{"name":"btnIncreaseTemp","style":{"weight":"0.50"},"text":"+","type":"button"}],"style":{"weight":"1.2"},"type":"horizontal"},{"style":{"weight":"0.5"},"type":"space"}],"style":{"weight":"1.2"},"type":"vertical"},{"components":[{"name":"lblMessage","style":{"weight":"1.2"},"text":"Message","type":"label"},{"style":{"weight":"0.5"},"type":"space"}],"style":{"weight":"1.2"},"type":"vertical"},{"components":[{"components":[{"name":"btnSet","style":{"weight":"0.50"},"text":"Set","type":"button"},{"name":"btnCancel","style":{"weight":"0.50"},"text":"Cancel","type":"button"}],"style":{"weight":"1.2"},"type":"horizontal"},{"style":{"weight":"0.5"},"type":"space"}],"style":{"weight":"1.2"},"type":"vertical"}]}},"head":{"title":"quickApp_device_316"}}},"uiCallbacks":[{"callback":"OffBt","eventType":"onReleased","name":"btnModeOff"},{"callback":"CoolBt","eventType":"onReleased","name":"btnModeCool"},{"callback":"AutoBt","eventType":"onReleased","name":"btnModeAuto"},{"callback":"DecreaseBt","eventType":"onReleased","name":"btnDecreaseTemp"},{"callback":"IncreaseBt","eventType":"onReleased","name":"btnIncreaseTemp"},{"callback":"SetButton","eventType":"onReleased","name":"btnSet"},{"callback":"CancelBt","eventType":"onReleased","name":"btnCancel"}],"quickAppVariables":[{"name":"CurrentTemp","value":"25"},{"name":"SetTemp","value":"25"},{"name":"CurrentMode","value":"Off"}],"typeTemplateInitialized":true},"files":[{"name":"main","isMain":true,"isOpen":true,"content":"function QuickApp:onInit()\n    self:debug(\"onInit\")\n    self.ACmode = \"Cool\";\n    self.ACTemp = 25; \n    self.ZXTID = 319;\n    self:updateView(\"lblStatus\", \"text\", self.ACmode .. \" : \" .. self.ACTemp)\n    self:updateView(\"lblMessage\", \"text\", \"-\")\nend\n\nfunction QuickApp:SetEvent(mode,temp)\n    self:debug(mode .. \" : \" .. temp)\n    fibaro.call(self.ZXTID, \"setThermostatMode\", mode)\n    if (mode ~= \"Off\") then\n        fibaro.call(self.ZXTID, \"setCoolingThermostatSetpoint\", temp)\n    end\nend\n\nfunction QuickApp:SetButton(event)\n    self:updateView(\"lblStatus\", \"text\", self.ACmode .. \" : \" .. self.ACTemp)\n    if (self.ACmode == \"Off\") then\n        self:updateView(\"lblMessage\", \"text\", \"Set mode : \" .. self.ACmode .. \" Successful\")\n    else\n        self:updateView(\"lblMessage\", \"text\", \"Set mode : \" .. self.ACmode .. \" \" .. self.ACTemp .. \" Â°C Successful\")\n    end\n    self:SetEvent(self.ACmode,self.ACTemp)\nend\nfunction QuickApp:CancelBt(event)\n    self:onInit()\nend\nfunction QuickApp:OffBt(event)\n    self.ACmode = \"Off\";\n    self:updateView(\"lblStatus\", \"text\", self.ACmode)\nend\nfunction QuickApp:CoolBt(event)\n    self.ACmode = \"Cool\";\n    self:updateView(\"lblStatus\", \"text\", self.ACmode .. \" : \" .. self.ACTemp)\nend\nfunction QuickApp:AutoBt(event)\n    self.ACmode = \"Auto\";\n    self:updateView(\"lblStatus\", \"text\", self.ACmode .. \" : \" .. self.ACTemp)\nend\nfunction QuickApp:DecreaseBt(event)\n    self.ACTemp = self.ACTemp - 1;\n    self:updateView(\"lblStatus\", \"text\", self.ACmode .. \" : \" .. self.ACTemp)\nend\nfunction QuickApp:IncreaseBt(event)\n    self.ACTemp = self.ACTemp + 1;\n    self:updateView(\"lblStatus\", \"text\", self.ACmode .. \" : \" .. self.ACTemp)\nend\n"}]}
